@model IEnumerable<Cinema.Data.ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1>Lista użytkowników</h1>

@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Id użytkownika : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-danger" asp-area="" asp-controller="Tickets" asp-action="Index" asp-route-userId="@user.Id">Rezerwacje użytkownika</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Brak użytkowników
        </div>
        <div class="card-body">
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-action="Register">
                Dodaj nowego użytkownika
            </a>
        </div>
    </div>
}